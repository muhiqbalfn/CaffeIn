<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvDessert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">
            <TextView
                android:id="@+id/tvNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nama food"/>
            <TextView
                android:id="@+id/tvQtyCart"
                android:layout_toRightOf="@+id/tvNameCart"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:text="(2x)"/>
            <TextView
                android:id="@+id/tvPriceCart"
                android:layout_below="@+id/tvNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25000"/>
            <ImageView
                android:id="@+id/ivNotSend"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/ivBatalCart"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/ivBatalCart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/ivSendCart"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/cancel"/>
            <ImageView
                android:id="@+id/ivSendCart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/send"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>