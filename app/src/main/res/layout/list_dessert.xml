<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cvDessert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/ivDessert"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/list_dessert"/>
            <TextView
                android:id="@+id/tvNameDessert"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivDessert"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:text="Dessert" />
            <TextView
                android:id="@+id/tvPriceDessert"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ivDessert"
                android:layout_below="@+id/tvNameDessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Hijau"
                android:text="Rp 20000"/>
            <LinearLayout
                android:id="@+id/llAdd"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvPriceDessert"
                android:layout_toRightOf="@+id/ivDessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivMin"
                    android:layout_marginTop="8dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/min"/>
                <TextView
                    android:id="@+id/tvQty"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/Hijau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <ImageView
                    android:id="@+id/ivPlus"
                    android:layout_marginTop="8dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/plus"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnPesanDessert"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@color/Hijau"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:text="pesan"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>